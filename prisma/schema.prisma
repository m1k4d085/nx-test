generator client {
  provider = "prisma-client"
  output   = "../libs/repository/generated"
}

datasource db {
  provider = "postgresql"
}

model Patient {
  id  Int   @id @default(autoincrement())
  nome String
  cognome String
  exams Examination[]
}

model Examination {
  id  Int   @id @default(autoincrement())
  exam String
  doctor String
  patient Patient @relation(fields: [patientId], references: [id])
  patientId Int
}